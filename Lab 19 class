public class TripleDice extends Dice
{
  
	public TripleDice()
	{
		numberOfTimesDiceRolled = 0;
		rolled = 0;
	}
	 
  // overides the other RollDice()

	public int RollDice()
	{
		numberOfTimesDiceRolled += 3;
		rolled += 3;
		return 1 + (int) (Math.random() * 18 );
	}
	
	public void ResetDice()
	{
		numberOfTimesDiceRolled = 0;
		rolled = 0;
	}

}
