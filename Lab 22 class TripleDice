public class TripleDice extends Dice
{
  
  public TripleDice()
  {
  	numberOfTimesDiceRolled = 0;
  	rolled = 0;
  	numberOfTimesRolled = 0;
  }
  
  public int RollDice()
  {
  	numberOfTimesDiceRolled += 3;
  	rolled += 3;
  	
  	int number = 1 + (int) (Math.random() * 18 );
  	
  	anArray[numberOfTimesRolled] = number;

  	++numberOfTimesRolled;
  	
  	return number;
  }
  
  public void ResetDice()
  {
  	numberOfTimesDiceRolled = 0;
  	rolled = 0;
  	numberOfTimesRolled = 0;
  }

}
